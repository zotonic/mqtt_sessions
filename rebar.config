%%-*- mode: erlang -*-

{require_min_otp_vsn, "19"}.

{erl_opts, [
    {parse_transform, lager_transform}
]}.

{deps, [
    lager,
    {mqtt_packet_map, "1.1.0"},
    {zotonic_stdlib, "1.0.1"},
    {jsx, "2.10.0"},
    {sidejob, "2.1.0"},
    {router, "1.0.3"}
 ]}.

{profiles, [
    {test, [
        {deps, [
            {proper, "1.2.0"}
